<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toiduHind.MainToiduFol.AdminPanels.StoresPage"
             Title="Poed">
    <CollectionView x:Name="StoresCollection">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" Margin="10" Padding="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" FontAttributes="Bold"/>
                        <Label Text="{Binding Location}" />
                        <!-- <Label Text="{Binding LogoFileName}" FontSize="10" TextColor="Gray"/> -->

                        <!-- Новое: изображение логотипа -->
                        <Image Source="{Binding LogoFileName}"
                            HeightRequest="50"
                            Aspect="AspectFit"
                            Margin="0,5,0,0"/>           

                        <Button Text="Kustuta" BackgroundColor="Red" TextColor="White"
                            Clicked="OnDeleteStoreClicked"
                            CommandParameter="{Binding Id}" />      

                    </VerticalStackLayout>

                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>

