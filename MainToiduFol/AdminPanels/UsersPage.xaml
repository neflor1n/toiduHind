<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toiduHind.MainToiduFol.AdminPanels.UsersPage"
             Title="Users">
    <VerticalStackLayout>
        <Button Text="Добавить пользователя" Clicked="OnAddUserClicked" />
        <CollectionView x:Name="UsersCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="{Binding Name}" FontSize="20" />
                        <Label Text="{Binding Email}" FontSize="16" Margin="10,0,0,0" />
                        <Button Text="Удалить" 
                                BackgroundColor="Red" 
                                TextColor="White" 
                                CommandParameter="{Binding Id}" 
                                Clicked="OnDeleteUserClicked" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
