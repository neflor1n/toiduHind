<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toiduHind.MainToiduFol.AdminPanels.AddDataFiles.AddStorePage"
             Title="Add Store">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Add New Store" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Label Text="Name" FontAttributes="Bold"/>
            <Entry x:Name="NameEntry" Placeholder="Enter store name"/>

            <Label Text="Location" FontAttributes="Bold"/>
            <Entry x:Name="LocationEntry" Placeholder="Enter location"/>

            <Label Text="Logo FileName" FontAttributes="Bold"/>
            <Entry x:Name="LogoFileNameEntry" Placeholder="Enter logo file name"/>

            <Label Text="Coordinates" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10,0,0"/>

            <Label Text="Latitude" FontAttributes="Bold"/>
            <Entry x:Name="LatitudeEntry" Placeholder="Enter latitude" Keyboard="Numeric"/>

            <Label Text="Longitude" FontAttributes="Bold"/>
            <Entry x:Name="LongitudeEntry" Placeholder="Enter longitude" Keyboard="Numeric"/>

            <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center" Margin="0,15,0,0">
                <Button Text="Save" Clicked="OnSaveClicked" BackgroundColor="#007bff" TextColor="White" WidthRequest="120"/>
                <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="#6c757d" TextColor="White" WidthRequest="120"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
